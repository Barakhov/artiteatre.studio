---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/shared/Container.astro";
---

<Layout>
  <main class="relative z-10 bg-white shadow-main">
    <Container>
      <article
        class="py-10 md:min-h-dvh flex items-center justify-between gap-8"
      >
        <div class="w-full md:w-1/2">
          <h1 class="mb-4 text-2xl md:text-3xl font-bold">
            Déjanos tus datos y te informamos
          </h1>
          <p class="mt-4 mb-6 text-gray-600">
            Rellena el formulario y nos pondremos en contacto contigo para
            resolver tus dudas y contarte todo sobre nuestro programa.
          </p>

          <form
            action="/formulario-enviado/"
            method="POST"
            class="w-full max-w-2xl"
            name="contacto"
            data-netlify="true"
            netlify-honeypot="bot-field"
          >
            <input
              type="hidden"
              name="subject"
              value="Nuevo mensaje de contacto - Artiteatre"
            />
            <p class="hidden">
              <label>
                Don’t fill this out if you’re human: <input name="bot-field" />
              </label>
            </p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
              <div>
                <input
                  class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-gray-200 focus:border-gray-400 transition-colors"
                  type="text"
                  name="name"
                  placeholder="Nombre"
                  required
                />
              </div>
              <div>
                <input
                  class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-gray-200 focus:border-gray-400 transition-colors"
                  type="tel"
                  name="phone"
                  placeholder="Teléfono"
                  required
                />
              </div>
            </div>
            <div class="mb-4">
              <input
                class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-gray-200 focus:border-gray-400 transition-colors"
                type="email"
                name="email"
                placeholder="Email"
                required
              />
            </div>
            <div class="mb-4">
              <textarea
                class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-gray-200 focus:border-gray-400 transition-colors"
                placeholder="Mensaje"
                name="message"
                rows="8"
                required></textarea>
            </div>
            <button
              class="w-auto py-1 px-4 rounded-full text-xl transition-colors duration-300 bg-contacto-primary font-medium"
              type="submit">Enviar</button
            >
          </form>
        </div>
        <div class="hidden md:flex w-1/2 items-center justify-center min-w-1/2">
          <img
            class="max-w-full h-auto"
            src="/illustrations/roller-skating.svg"
            alt="artiteatre Logo"
          />
        </div>
      </article>
    </Container>

    <div class="w-full h-[300px] md:h-[400px] lg:h-[520px]">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3090.0000000000005!2d1.4284329!3d38.9107795!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x129946bc06042a03%3A0x3d4ff8d27cec70a1!2sAcademia%20Place!5e0!3m2!1sen!2ses!4v1234567890123!5m2!1sen!2ses&hl=es"
        width="100%"
        height="100%"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
  </main>
</Layout>
