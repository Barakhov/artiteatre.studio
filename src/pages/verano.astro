            <h2
              class="mb-4 lg:mb-8 text-4xl lg:text-5xl font-bold italic text-verano-secondary"
            >
              Información
            </h2>

            <section class="flex flex-col md:flex-row gap-4 mb-4">
              <!-- Left Column -->
              <div class="flex flex-col gap-4 w-full md:w-1/2">
                <div class="flex items-start gap-2">
                  <img
                    class="w-6 mt-1"
                    src="/icons/lang.svg"
                    alt="download document icon"
                  />
                  <span class="text-xl">
                    <span class="font-semibold text-verano-secondary"
                      >Lengua vehícular:</span
                    > Catalán y Castellano
                  </span>
                </div>

                <div class="flex items-start gap-2">
                  <img
                    class="w-6 mt-1"
                    src="/icons/age.svg"
                    alt="download document icon"
                  />
                  <span class="text-xl">
                    <span class="font-semibold text-verano-secondary"
                      >Edades:</span
                    > de 6 a 13 años
                  </span>
                </div>

                <div class="flex items-start gap-2">
                  <img
                    class="w-6 mt-1"
                    src="/icons/clock.svg"
                    alt="download document icon"
                  />
