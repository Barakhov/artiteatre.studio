                <div class="flex items-start gap-2">
                  <img
                    class="w-6 mt-1"
                    src="/icons/mail.svg"
                    alt="download document icon"
                  />
                  <span class="text-xl">
                    <span class="font-semibold text-verano-secondary"
                      >Email:</span
                    > artiteatre.nadiabanegas@gmail.com
                  </span>
                </div>

                <div class="flex items-start gap-2">
                  <img
                    class="w-6 mt-1"
                    src="/icons/marker.svg"
                    alt="download document icon"
                  />
                  <span class="text-xl">
                    <span class="font-semibold text-verano-secondary"
                      >Ubicación:</span
                    > Pasaje Isidoro Macabich, 20 bis 6º 3ª, 07800 Ibiza
                  </span>
                </div>
              </div>
            </section>
            <div class="flex items-start gap-2 mb-4">
              <img
                class="w-6 mt-1"
                src="/icons/save.svg"
                alt="download document icon"
              />
              <span class="text-xl font-semibold text-verano-secondary">
                Precios:
              </span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-12 mb-16">
              <FlipCard
                frontTitle="julio"
                iconName="julio"
                dates="del 1 martes al 31 jueves"
                price="460€"
                discountLink="/assets/pec_escola_destiu_cast_2025.pdf#page=38"
                discountText="Ver descuentos"
              />
              <FlipCard
                frontTitle="agosto"
                iconName="agosto"
                dates="del 1 viernes al 29 viernes"
                price="460€"
                discountLink="/assets/pec_escola_destiu_cast_2025.pdf#page=38"
                discountText="Ver descuentos"
              />
              <FlipCard
                frontTitle="julio & agosto"
                iconName="dosmeses"
                dates="del 1 de julio al 29 de agosto"
                price="920€"
                discountLink="/assets/pec_escola_destiu_cast_2025.pdf#page=38"
                discountText="Ver descuentos"
              />
              <FlipCard
                frontTitle="por semanas"
                iconName="semanas"
                dates="5 días seguidos"
                price="140€"
              />
            </div>
          </article>

          <!-- Teachers Section -->
          <article
            data-item="observed"
            id="profesorado"
            class="mb-12 lg:mb-24 scroll-mt-28"
          >
            <h2
              class="mb-4 lg:mb-8 text-4xl lg:text-5xl font-bold italic text-verano-secondary"
            >
              {teacherTitle}
            </h2>
            {
              teachers.map((teacher: any) => (
                <section class="mb-12 md:mb-20 last:mb-0">
                  <div class="grid grid-cols-1 md:grid-cols-[1fr_3fr] gap-6 md:gap-8">
                    <div class="max-w-[500px]">
                      <RevealImage
                        imageUrl={teacher.image}
                        bgColor="bg-verano-50"
                        alt={teacher.image_alt}
                        animationDuration={1.2}
                      />
                    </div>
                    <div class="marked text-lg">
                      <h3 class="mb-4 md:mb-6 text-2xl md:text-3xl font-semibold text-verano-secondary">
                        {teacher.name}
                      </h3>
                      <p
                        class="font-serif"
                        set:html={marked(teacher.description)}
                      />
                    </div>
                  </div>
                </section>
              ))
            }
          </article>

          <!-- Documents Section -->
          <article
            data-item="observed"
            id="documentos"
            class="mb-12 lg:mb-24 scroll-mt-28"
          >
            <h2
              class="mb-4 lg:mb-8 text-4xl lg:text-5xl font-bold italic text-verano-secondary"
            >
              {documentTitle}
            </h2>
            <div class="flex flex-col">
              {
                documents.map((docItem: any) => (
                  <a
                    href={docItem.doc}
                    target="_blank"
                    class="mb-6 py-4 px-6 rounded-full inline-flex w-full md:w-fit gap-3 items-center justify-between md:justify-start hover:bg-verano-primary transition-colors duration-300 bg-verano-50"
                  >
                    <span class="text-xl font-semiboldNO">{docItem.name}</span>
                    <img
                      class="w-6"
                      src="/icons/arrow-down.svg"
                      alt="download document icon"
                    />
                  </a>
                ))
