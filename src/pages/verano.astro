                  imageUrl="/verano-mas.jpg"
                  bgColor="bg-white"
                  alt="A beautiful scene"
                  animationDuration={1.5}
                />
              </div>
            </div>
          </article>

          <!-- Gallery Section -->
          <article
            data-item="observed"
            id="galeria"
            class="mb-12 lg:mb-24 scroll-mt-28"
          >
            <h2
              class="mb-4 lg:mb-8 text-4xl lg:text-5xl font-bold italic text-verano-secondary"
            >
              Galería de imágenes
            </h2>

            <div data-cursor-text="Ver imagen" data-cursor-color="#76FF03">
              <Gallery config={galleryConfig} />
            </div>
          </article>

          <!-- Informacion Section -->
          <article
            data-item="observed"
            id="informacion"
            class="mb-12 lg:mb-24 scroll-mt-28"
