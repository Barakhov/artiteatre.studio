---
import "@/styles/index.css";
import { getEntry } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/shared/Container.astro";
import Shape from "@/components/Shape.astro";
import { marked } from "marked";
import CustomCursor from "@/components/shared/CustomCursor.astro";

const inicioEntry = await getEntry("pages", "inicio");
const { title, intro, description } = inicioEntry.data;
---

<Layout>
  <CustomCursor />
  <main
    class="flex flex-col gap-20 overflow-hidden pb-20 relative z-10 bg-white shadow-main"
  >
    <article
      class="flex flex-col gap-8 min-h-[calc(100dvh-70px)]"
      transition:name="myArticle"
    >
      <Container class="mt-32 mb-20">
        <h1 class="mb-6 text-6xl md:text-8xl md:mb-4 italic">
          {title}
        </h1>
        <div class="flex flex-col md:flex-row gap-4 md:gap-10">
          <div class="mb-4 text-2xl md:text-3xl md:max-w-4xl md:w-2/3">
            <p set:html={marked(intro)} />
          </div>
          <div class="marked mb-4 md:text-l md:max-w-4xl md:w-1/3">
            <p set:html={marked(description)} />
          </div>
        </div>
      </Container>

      <div class="shapes-container flex gap-2 p-2 mt-auto">
        <Shape
          href="/arte"
          shapeClass="shape-1"
          bgColor="bg-arte-primary"
          imgSrc="/logos/eltrac.svg"
          imgAlt="artiteatre Logo"
          cursorText="Arte"
          cursorColor="#FF3D00"
        />

        <Shape
          href="/teatro"
          shapeClass="shape-2"
          bgColor="bg-teatro-primary"
          imgSrc="/logos/musicaldansa.svg"
          imgAlt="artiteatre Logo"
          cursorText="Teatro"
          cursorColor="#FFC400"
        />

        <Shape
          href="/verano"
          shapeClass="shape-3"
          bgColor="bg-verano-primary"
          imgSrc="/logos/verano.svg"
          imgAlt="artiteatre Logo"
          cursorText="Escuela de verano"
          cursorColor="#76FF03"
        />

        <Shape
          href="/contacto"
          shapeClass="shape-4"
          bgColor="bg-contact-primary"
          imgSrc="/logos/hand.svg"
          imgAlt="artiteatre Logo"
          imgClass="wave w-16"
          cursorText="Contacto"
          cursorColor="#1DE9B6"
        />
      </div>
    </article>
  </main>
</Layout>
