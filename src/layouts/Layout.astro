---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SEOTags from "@/components/seo/SEOTags.astro";

// Supports weights 200-800
import "@fontsource/hanken-grotesk";
import "@/styles/tailwind.css";
import "@/styles/post.css";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <SEOTags title={title} />
  <ViewTransitions />
  <body class="min-h-[100dvh] flex flex-col">
    <style is:global>
      html {
        font-family: "Hanken Grotesk";
      }

      .shape {
        transform-origin: center;
      }

      .shape-1 {
        background: #eeb51c;
        animation: shape-anim 24s infinite forwards linear;
      }

      .shape-2 {
        background: #7181dd;
        border-radius: 100%/100%;
        animation: shape-anim-rev 24s infinite forwards linear;
        animation-delay: 0.1s;
      }

      .shape-3 {
        background: #a9e95c;
        animation: shape-anim 24s infinite forwards linear;
        animation-delay: 0.2s;
      }

      .shape-4 {
        background: #d46c5f;
        border-radius: 100%/100%;
        animation: shape-anim-rev 24s infinite forwards linear;
        animation-delay: 0.3s;
      }

      @keyframes shape-anim {
        0%,
        11.25% {
          border-radius: 0;
          transform: rotate(0deg);
        }
        11.25%,
        13.75% {
          border-radius: 0;
          transform: rotate(0deg);
        }
        13.75%,
        36.25% {
          border-radius: 100%/100%;
          transform: rotate(90deg);
        }
        36.25%,
        38.75% {
          border-radius: 100%/100%;
          transform: rotate(90deg);
        }
        38.75%,
        61.25% {
          border-radius: 0;
          transform: rotate(180deg);
        }
        61.25%,
        63.75% {
          border-radius: 0;
          transform: rotate(180deg);
        }
        63.75%,
        86.25% {
          border-radius: 100%/100%;
          transform: rotate(270deg);
        }
        86.25%,
        88.75% {
          border-radius: 100%/100%;
          transform: rotate(270deg);
        }
        88.75%,
        100% {
          border-radius: 0;
          transform: rotate(360deg);
        }
      }

      @keyframes shape-anim-rev {
        0%,
        11.25% {
          border-radius: 100%/100%;
          transform: rotate(0deg);
        }
        11.25%,
        13.75% {
          border-radius: 100%/100%;
          transform: rotate(0deg);
        }
        13.75%,
        36.25% {
          border-radius: 0;
          transform: rotate(90deg);
        }
        36.25%,
        38.75% {
          border-radius: 0;
          transform: rotate(90deg);
        }
        38.75%,
        61.25% {
          border-radius: 100%/100%;
          transform: rotate(180deg);
        }
        61.25%,
        63.75% {
          border-radius: 100%/100%;
          transform: rotate(180deg);
        }
        63.75%,
        86.25% {
          border-radius: 0;
          transform: rotate(270deg);
        }
        86.25%,
        88.75% {
          border-radius: 0;
          transform: rotate(270deg);
        }
        88.75%,
        100% {
          border-radius: 100%/100%;
          transform: rotate(360deg);
        }
      }
    </style>
    <Header />
    <slot />
    <Footer />

    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"
    ></script>
    <script src="../scripts/pageLoad.js"></script>
  </body>
</html>
