---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import SEOTags from "@/components/seo/SEOTags.astro";

import "@fontsource/open-sans";
import "@/styles/tailwind.css";
import "@/styles/post.css";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <SEOTags title={title} />
  <ViewTransitions />
  <body
    class="mx-auto flex min-h-screen max-w-[872px] flex-col gap-9 bg-neutral-950 px-10 py-8 text-sm text-neutral-400 md:gap-20 md:py-16"
  >
    <Header />
    <slot />
    <style is:global>
      html {
        font-family: "Open Sans";
      }

      @keyframes svgRotate {
        from {
          transform: rotate(0deg);
        }
        to {
          transform: rotate(360deg);
        }
      }

      .svg-rotate {
        animation: svgRotate 3s linear forwards infinite;
      }

    </style>
    <script src="../scripts/pageLoad.js"></script>
  </body>
</html>
