---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SEOTags from "@/components/seo/SEOTags.astro";

// Supports weights 200-800
import "@fontsource-variable/manrope";

import "@/styles/tailwind.css";
import "@/styles/post.css";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <SEOTags title={title} />
  <ViewTransitions />
  <body
    class="dark:bg-neutral-950 bg-slate-200 text-sm dark:text-neutral-400 text-slate-800"
  >
    <Header />
    <div
    id="mainPanel"
      class="mx-auto flex min-h-screen flex-col gap-9 md:gap-20 md:py-16 dark:bg-neutral-950 bg-slate-200"
    >
      <slot />
    </div>
    <Footer>
      <article>
        <p>
          No data is stored or collected on this website.
          <br />
          Site version. 1.0.0 The website uses Manrope font. Created with Astro, Madrid
          2025.
          <br />
          All claims and statements reflect subjective observations.
        </p>
      </article>
    </Footer>
    <style is:global>
      html {
        font-family: "Manrope Variable";
      }
      @keyframes svgRotate {
        from {
          transform: rotate(0deg);
        }
        to {
          transform: rotate(360deg);
        }
      }
      .svg-rotate {
        animation: svgRotate 3s linear forwards infinite;
      }
    </style>
    <script src="../scripts/pageLoad.js"></script>
    <script src="../scripts/themeToggle.js"></script>
  </body>
</html>
