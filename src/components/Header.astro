---
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import presentation from "@/data/presentation";
import Container from "@/components/Container.astro";

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header class="z-20 w-full py-4 absolute">
  <Container
    class="flex flex-col gap-2 md:flex-row md:justify-between items-center"
  >
    <h1 class="text-xl">
      <a href="/">
        <img class="w-36" src="/logos/ait-logo.svg" alt="artiteatre Logo" />
      </a>
    </h1>

    <nav role="navigation">
      <ul role="list" class="flex flex-row gap-2">
        <li>
          <a
            href="/"
            class:list={{
              ["hover:text-orange-600"]: true,
              ["underline"]: pathname === "/",
            }}>Home</a
          >
        </li>
        <li>
          <a
            href="/escuela"
            class:list={{
              ["hover:text-orange-600"]: true,
              ["underline"]: pathname === "/escuela",
            }}>Escuela verano</a
          >
        </li>
      </ul>
    </nav>
  </Container>
</header>
