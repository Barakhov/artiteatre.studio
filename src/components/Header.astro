---
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import presentation from "@/data/presentation";
import Container from "@/components/Container.astro";

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header class="z-20 w-full relative">
  <Container class="flex flex-col gap-2 md:flex-row md:justify-between items-center py-4">


    <nav role="navigation">
      <ul role="list" class="flex flex-row gap-2">
        <li>
          <a
            href="/"
            class:list={{
              ["hover:text-neutral-100"]: true,
              ["text-neutral-100"]: pathname === "/",
            }}>Home</a
          >
        </li>
        <li>
          <a
            href="/escuela"
            class:list={{
              ["hover:text-neutral-100"]: true,
              ["text-neutral-100"]: pathname === "/escuela",
            }}>Escuela verano</a
          >
        </li>
      </ul>
    </nav>
  </Container>
</header>
