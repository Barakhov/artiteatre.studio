---
import VeranoIcon from "@/components/shared/VeranoIcon.astro";

const {
  iconName = "",
  frontPretitle = "Escuela de verano",
  frontTitle = "Mes",
  dates = "",
  price = "",
  discountLink = "",
  discountText = "",
  schedule = "de lunes a viernes",
  time = "de 9h a 14h",
} = Astro.props;
---

<style>
  .card-container {
    perspective: 1000px;
    width: 100%;
    margin: auto;
  }
  .card {
    width: 100%;
    min-height: 480px;
    position: relative;
    transition: transform 500ms ease-out;
    transform-style: preserve-3d;
    cursor: pointer;
  }
  .card.is-flipped {
    transform: rotateY(180deg);
  }
  .card figure {
    position: absolute;
    width: 100%;
    height: 100%;
    margin: 0;
    backface-visibility: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .card .front {
    z-index: 2;
    border-radius: 16px;
    text-align: center;

    background: rgb(241, 248, 233);
    background: linear-gradient(
      144deg,
      rgba(241, 248, 233, 1) 100%,
      rgba(232, 241, 223, 1) 100%
    );
  }

  .card .back {
    @apply bg-verano-50;
    transform: rotateY(180deg);
    padding: 2rem;
    text-align: center;
    border-radius: 16px;
  }
  .card figcaption {
    max-width: 330px;
    margin-inline: auto;
    z-index: 1;
  }
</style>

<div class="card-container">
  <div class="card flipCard">
    <figure
      class="front"
      data-cursor-text="Mas informaciÃ³n"
      data-cursor-color="#76FF03"
    >
      <div class="flex flex-col justify-center items-center">
        <figcaption>
          <p class="uppercase text-xl mb-6 text-verano-secondary">
            {frontPretitle}
          </p>
          <h3 class="font-semibold italic text-7xl leading-none mb-[40px]">
            {frontTitle}
          </h3>
        </figcaption>
        <VeranoIcon name={iconName} size="28" />
      </div>
    </figure>
    <figure class="back">
      <figcaption>
        <p class="uppercase text-xl mb-6 text-verano-secondary">
          {dates}
        </p>
        <p class="font-semibold italic text-7xl leading-none mb-6">{price}</p>
        {
          discountLink && (
            <a
              class="inline-block py-1 px-4 bg-verano-primary rounded-full hover:bg-verano-secondary hover:text-white transition-colors duration-300 text-xl"
              href={discountLink}
              target="_blank"
            >
              {discountText}
            </a>
          )
        }
        <p class="text-xl mt-6 mb-4 italic text-verano-secondary">
          {schedule}
          <br />
          {time}
        </p>
      </figcaption>
    </figure>
  </div>
</div>

<script>
  document.addEventListener("astro:page-load", () => {
    const cards = document.querySelectorAll(".flipCard");
    cards.forEach((card) => {
      card.addEventListener("click", () => {
        const containers = document.querySelectorAll(".card-container");
        containers.forEach((container) => {
          (container as HTMLElement).style.zIndex = "";
        });
        card.classList.toggle("is-flipped");
        const container = card.closest(".card-container");
        if (container) {
          (container as HTMLElement).style.zIndex = "10";
        }
      });
    });
  });
</script>
