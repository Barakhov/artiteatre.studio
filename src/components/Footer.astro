---
import information from "@/data/information";
---

<footer class="bg-white sticky bottom-0">
  <div class="mx-auto max-w-7xl px-4 pb-6 pt-20 lg:pt-28">
    <div class="grid grid-cols-1 gap-14 lg:gap-4 lg:grid-cols-4">
      <!-- Logo Section -->

      <div class="flex justify-start lg:col-span-1">
        <a href="/">
          <img
            class="w-40 md:w-32"
            src="/logos/ait-logo.svg"
            alt="Artiteatre logo"
          />
        </a>
      </div>

      <!-- Navigation & Contact Sections -->
      <div
        class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:gap-4 md:grid-cols-3 lg:col-span-3"
      >
        <!-- Main Navigation -->
        <nav aria-label="Footer navigation">
          <ul
            class="flex flex-col gap-4 border-b border-gray-300 sm:border-0 pb-6 sm:pb-0"
          >
            <li>
              <a class="hover:underline" href="/teatro">Teatro</a>
            </li>
            <li>
              <a class="hover:underline" href="/arte">Arte</a>
            </li>
            <li>
              <a class="hover:underline" href="/verano">Escuela de verano</a>
            </li>
            <li>
              <a class="hover:underline" href="/contacto">Contacto</a>
            </li>
          </ul>
        </nav>

        <!-- Social Links -->
        <nav aria-label="Social media links">
          <ul
            class="flex flex-col gap-4 border-b border-gray-300 sm:border-0 pb-6 sm:pb-0"
          >
            {
              information.socials.map((social) => (
                <li class="inline-flex w-fit gap-3 relative">
                  <img
                    class="size-6"
                    src={`/icons/${social.icon}.svg`}
                    alt=""
                    aria-hidden="true"
                  />

                  <a
                    class="hover:underline group"
                    href={social.link}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    {social.label}
                    <span class="absolute top-[-120%] left-1/2 -translate-x-1/2 text-nowrap pointer-events-none shadow-md bg-gray-50 text-gray-600 text-xs px-2 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity before:content-[''] before:absolute before:left-1/2 before:-translate-x-1/2 before:top-full before:border-4 before:border-transparent before:border-t-gray-50">
                      {social.tooltip}
                    </span>
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>

        <!-- Contact Information -->
        <address
          class="sm:border-t sm:border-gray-300 sm:pt-6 sm:col-span-2 md:col-span-1 md:border-0 md:pt-0 not-italic"
        >
          <ul class="flex flex-col gap-4">
            <li>
              <a
                class="inline-block text-black transition hover:underline flex-1 break-all"
                href={`mailto:${information.mail}`}
              >
                {information.mail}
              </a>
            </li>
            <li>
              {
                information.phone.split("/").map((phone, index, arr) => {
                  const cleanNumber = phone.trim().replace(/\s/g, "");
                  return (
                    <>
                      <a href={`tel:${cleanNumber}`} class="hover:underline">
                        {phone.trim()}
                      </a>
                      {index < arr.length - 1 && <span> / </span>}
                    </>
                  );
                })
              }
            </li>
            <li>
              <a
                class="inline-block text-black transition hover:underline"
                href={information.gmaps}
                target="_blank"
                rel="noopener noreferrer"
              >
                {information.address}
              </a>
            </li>
          </ul>
        </address>
      </div>
    </div>

    <!-- Footer Legal Links and Copyright -->
    <div class="mt-12 pt-6 lg:mt-20">
      <div class="text-center sm:flex sm:justify-between sm:text-left">
        <p class="text-sm text-gray-600 sm:order-first">
          <a
            class="inline-block text-gray-600 transition hover:underline"
            href="/aviso-legal"
          >
            Aviso legal
          </a>
          <span>&middot;</span>
          <a
            class="inline-block text-gray-600 transition hover:underline"
            href="/politica-privacidad"
          >
            Pol√≠tica de privacidad
          </a>
        </p>
        <p class="mt-4 text-sm text-gray-600 sm:mt-0">
          <a href="/admin" target="_blank" rel="noopener noreferrer">&copy;</a>
          {new Date().getFullYear()} artiteatre
        </p>
      </div>
    </div>
  </div>
</footer>
